#/bin/sh
path="$HOME/Dev"
selected=$(
    find "$path"/* -maxdepth 1 -mindepth 1 -type d |
    sed "s~$path/~~" |
    fzf-tmux -p --cycle |
    sed "s~^~$path/~"
)

if [ -n "$selected" ]; then
    dirname=$(echo "$selected" | sed "s~$path/~~")

    if [ -n "$TMUX" ]; then
        tmux switch-client -t "$dirname" ||
            (tmux new -c "$selected" -d -s "$dirname" && tmux switch-client -t "$dirname")
    else
        tmux new -c "$selected" -A -s "$dirname"
    fi
fi
