# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000

# Throw
bind 1:cmd;ctrl       throw 0 resize
bind 2:cmd;ctrl       throw 1 resize

# Resize
bind l:shift;ctrl      resize +10% +0
bind h:shift;ctrl      resize -10% +0
bind k:shift;ctrl      resize +0   -10%
bind j:shift;ctrl      resize +0   +10%
bind l:shift;ctrl;alt  resize -10% +0 bottom-right
bind h:shift;ctrl;alt  resize +10% +0 bottom-right
bind k:shift;ctrl;alt  resize +0   +10% bottom-right
bind j:shift;ctrl;alt  resize +0   -10% bottom-right

# Push
bind l:cmd;ctrl       push right bar-resize:screenSizeX/2
bind h:cmd;ctrl       push left  bar-resize:screenSizeX/2
bind k:cmd;ctrl       push up    bar-resize:screenSizeY/2
bind j:cmd;ctrl       push down  bar-resize:screenSizeY/2

# Window Hints
bind esc:cmd          hint
