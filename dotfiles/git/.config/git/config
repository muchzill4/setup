[color]
  ui = true
  diff = auto
  status = auto
  branch = auto

[push]
  default = simple
  autoSetupRemote = true

[pull]
  ff = only

[init]
  defaultBranch = master
  templateDir = ~/.config/git/template

[alias]
  l = log --graph --pretty=oneline --abbrev-commit
  s = status
  p = push
  q = pull

[include]
  path = ~/.config/git/config.local
