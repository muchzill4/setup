[color]
  ui = true
  diff = auto
  status = auto
  branch = auto

[push]
  default = simple
  autoSetupRemote = true

[pull]
  ff = only

[init]
  defaultBranch = master
  templateDir = ~/.config/git/template

[alias]
  l = log --oneline
  s = status
  p = push
  q = pull
  c = commit
  a = add
  d = diff
  co = checkout

[include]
  path = ~/.config/git/config.local
