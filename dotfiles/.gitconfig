[core]
  editor = vim
  excludesfile = ~/.gitignore_global

[color]
  ui = true
  diff = auto
  status = auto
  branch = auto

[push]
  default = simple

[alias]
  co = checkout
  cob = checkout -b
  ci = commit
  cia = commit --amend
  l = log
  pl = pull
  ps = push
  lo = log --oneline
  s = status
  rbm = rebase master
