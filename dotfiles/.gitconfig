    name = Bartek Mucha
    email = muchzill4@gmail.com

[core]
    editor = vim
    excludesfile = ~/.gitignore_global

[color]
    ui = true
    diff = auto
    status = auto
    branch = auto

[push]
    default = simple

[alias]
    co = checkout
    ap = add . -p
    a = add
    s = status
    ss = status -s
    l = pull
    p = push
    po = push origin
    c = commit -v
    ca = commit --amend -v
    cm = commit -v -m
    ci = commit --interactive
    co = checkout
    lo = log --graph --pretty=oneline --abbrev-commit
    lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
