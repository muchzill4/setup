# vim:ft=sh
source "$(asdf direnv hook asdf)"

use_local_vim_config() {
  local config_name=${1:-vim-config.lua}
  local config_file="$(find_up $config_name)"
  if [ -n "$config_file" ]; then
    echo "Adding vim config: ${config_name}"
    path_add LOCAL_VIM_CONFIG $config_file
  else
    echo "Can't find vim config: ${config_name}"
  fi
}

